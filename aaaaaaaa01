--========================================================
-- Utils (prefixed)
local function BRVS_GetMyIslandName()
	for i = 1, 6 do
		local island = BRVS_ART_FOLDER:FindFirstChild("Island_" .. i)
		if island and island:GetAttribute("OccupyingPlayerId") == BRVS_UserId then
			return island.Name
		end
	end
	return nil
end

local function BRVS_ContainsOrAny(list, value)
	if not list or #list == 0 then return true end
	for _, v in ipairs(list) do
		if v == "Any" then return true end
	end
	for _, v in ipairs(list) do
		if v == value then return true end
	end
	return false
end

-- >>> Rayfield dropdown normalizer (string / array / map -> array of strings)
local function BRVS_AsArray(opts)
	if not opts then return {} end
	local t = type(opts)
	if t == "string" then return { opts } end
	if t ~= "table" then return {} end
	local out = {}
	if opts[1] ~= nil then
		for _, v in ipairs(opts) do table.insert(out, tostring(v)) end
	else
		for k, v in pairs(opts) do
			if v == true then table.insert(out, tostring(k))
			elseif type(v) == "string" then table.insert(out, v) end
		end
	end
	return out
end

-- >>> Food selection matcher (same semantics as eggs/mutations)
local function BRVS_FoodSelected(name)
	return BRVS_ContainsOrAny(BRVS_AsArray(_G.__brvs_selected_food or {}), name) -- (used only if you need it elsewhere)
end

