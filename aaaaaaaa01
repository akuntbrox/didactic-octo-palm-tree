-- =================== TAB: Auto Buy ===================
local BRVS_AutoTab = BRVS_Window:CreateTab("Auto Buy", "shopping-bag")
local BRVS_IslandLabel = BRVS_AutoTab:CreateLabel(BRVS_IslandName and ("Island: "..BRVS_IslandName) or "Island: (none)")

BRVS_AutoTab:CreateSection("Auto buy egg")
local BRVS_EggDD = BRVS_AutoTab:CreateDropdown({
	Name = "Egg Name(s)",
	Options = BRVS_EGG_OPTIONS,
	CurrentOption = {},
	MultipleOptions = true,
	Flag = "EggNames",
	Callback = function(options)
		BRVS_SelEggNames = BRVS_AsArray(options)
		BRVS_PrintMatches()
		BRVS_RescanAutoBuy()
	end,
})
local BRVS_MutDD = BRVS_AutoTab:CreateDropdown({
	Name = "Mutation(s)",
	Options = BRVS_MUTATION_OPTIONS,
	CurrentOption = {},
	MultipleOptions = true,
	Flag = "Mutations",
	Callback = function(options)
		BRVS_SelMutations = BRVS_AsArray(options)
		BRVS_PrintMatches()
		BRVS_RescanAutoBuy()
	end,
})
local BRVS_AutoBuyToggle = BRVS_AutoTab:CreateToggle({
	Name = "Auto Buy Eggs",
	CurrentValue = false,
	Flag = "AutoBuy",
	Callback = function(on)
		BRVS_AutoBuyEnabled = on
		if BRVS_AutoBuyEnabled then
			BRVS_RescanAutoBuy()
			BRVS_Rayfield:Notify({ Title = "Auto Buy", Content = "Enabled", Duration = 4, Image = "shopping-bag" })
		else
			BRVS_Rayfield:Notify({ Title = "Auto Buy", Content = "Disabled", Duration = 3, Image = "ban" })
		end
	end,
})

BRVS_AutoTab:CreateSection("Food Store")
-- >>> Food multi-select with "Any" + normalization
local BRVS_FoodDD = BRVS_AutoTab:CreateDropdown({
	Name = "Food (multi-select)",
	Options = BRVS_FOOD_OPTIONS,
	CurrentOption = {},
	MultipleOptions = true,
	Flag = "FoodSelect",
	Callback = function(options)
		BRVS_SelectedFood = BRVS_AsArray(options)
		_G.__brvs_selected_food = BRVS_SelectedFood
	end,
})
-- Food buy interval (slider)
local BRVS_FoodIntervalSlider = BRVS_AutoTab:CreateSlider({
	Name = "Food Buy Interval",
	Range = {1, 60},
	Increment = 1,
	Suffix = "sec",
	CurrentValue = BRVS_FoodBuyInterval,
	Flag = "FoodBuyInterval",
	Callback = function(val)
		BRVS_FoodBuyInterval = tonumber(val) or BRVS_FoodBuyInterval
	end,
})
-- Auto Buy Food toggle
local BRVS_AutoBuyFoodToggle = BRVS_AutoTab:CreateToggle({
	Name = "Auto Buy Food",
	CurrentValue = false,
	Flag = "AutoBuyFood",
	Callback = function(on)
		BRVS_FoodBuyEnabled = on
		BRVS_FoodBuyThread = nil
		if not BRVS_FoodBuyEnabled then
			BRVS_Rayfield:Notify({ Title = "Food Store", Content = "Auto Buy Food: OFF", Duration = 2.5, Image = "ban" })
			return
		end
		BRVS_FoodBuyThread = task.spawn(function()
			BRVS_Rayfield:Notify({ Title = "Food Store", Content = "Auto Buy Food: ON", Duration = 2.5, Image = "shopping-cart" })
			while BRVS_FoodBuyEnabled do
				-- >>> Build the list using Any/empty = all
				local selected = BRVS_AsArray(BRVS_SelectedFood)
				local buyAll = (#selected == 0)
				for _, s in ipairs(selected) do if s == "Any" then buyAll = true break end end
				local foods = buyAll and BRVS_FOOD_BASE or selected

				local remote = BRVS_ReplicatedStorage:FindFirstChild(BRVS_FOOD_REMOTE_PATH[1])
				remote = remote and remote:FindFirstChild(BRVS_FOOD_REMOTE_PATH[2])
				if #foods > 0 and remote and remote:IsA("RemoteEvent") then
					for _, item in ipairs(foods) do
						if not BRVS_FoodBuyEnabled then break end
						remote:FireServer(item) -- {"<FoodName>"}
						task.wait(0.05)
					end
				end
				local t = math.max(0.1, BRVS_FoodIntervalSlider.CurrentValue or BRVS_FoodBuyInterval or 2)
				local elapsed = 0
				while BRVS_FoodBuyEnabled and elapsed < t do
					task.wait(0.1)
					elapsed = elapsed + 0.1
				end
			end
		end)
	end,
})

-- =================== TAB: Auto Collect ===================
local BRVS_CollectTab = BRVS_Window:CreateTab("Auto Collect", "package")

-- >>> Pet Claim
BRVS_CollectTab:CreateSection("Auto Claim Pet")
local BRVS_PetDelaySlider = BRVS_CollectTab:CreateSlider({
	Name = "Pet Claim Interval",
	Range = {1, 60},
	Increment = 1,
	Suffix = "sec",
	CurrentValue = BRVS_PetClaimInterval,
	Flag = "PetClaimDelay",
	Callback = function(val)
		BRVS_PetClaimInterval = tonumber(val) or BRVS_PetClaimInterval
	end,
})
local BRVS_PetToggle = BRVS_CollectTab:CreateToggle({
	Name = "Auto Claim Pets (owned by you)",
	CurrentValue = false,
	Flag = "PetClaimToggle",
	Callback = function(on)
		if on then
			BRVS_PetClaimInterval = BRVS_PetDelaySlider.CurrentValue or BRVS_PetClaimInterval
			BRVS_Pet_Start()
			BRVS_Rayfield:Notify({ Title = "Pet Claim", Content = "Auto-claim enabled", Duration = 3, Image = "package" })
		else
			BRVS_Pet_Stop()
			BRVS_Rayfield:Notify({ Title = "Pet Claim", Content = "Auto-claim disabled", Duration = 2, Image = "ban" })
		end
	end,
})

