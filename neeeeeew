local function _fmtList(list)
    if not list or #list == 0 then return "Any" end
    for _, v in ipairs(list) do if v == "Any" then return "Any" end end
    return table.concat(list, ", ")
end

local function BRVS_UpdateEggFilterPara()
    if not BRVS_EggFilterPara then return end
    local namesTxt = _fmtList(BRVS_SelEggNames)
    local mutsTxt  = _fmtList(BRVS_SelMutations)
    BRVS_EggFilterPara:Set({
        Title   = "Egg Buy Filter",
        Content = ("Names: %s\nMutations: %s"):format(namesTxt, mutsTxt)
    })
end

